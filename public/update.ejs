
<%- include('header.ejs') -%>
<%- include('navbar.ejs') -%>

    <br><br><br>
    <% if (locals.message) { %>
      <h3 style="color: red" ><%= message %></h3>
    <% } %>


    <form action="/users/update/<%= user.username %>" method="post" >

      <div class="col-xs-2">
        <label for="username">username</label>
        <input type="text" class="form-control" name="username" placeholder="username" value="<%= user.username %>">
      </div>

      <div class="col-xs-2">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password" value="<%= user.password%>">
      </div>

      <div class="col-xs-2">
        <label for="confirm"> confirm Password</label>
        <input type="password" class="form-control" name="confirm" placeholder="Password" value="<%= user.password%>">
      </div>

      <div class="col-xs-2">
        <label for="confirm"> name</label>
        <input type="text" class="form-control" name="name" placeholder="name" value="<%= user.name%>">
      </div>

      <div class="dropdown">

        <label for="title"> Title</label>
          <select name="title" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          <option value="Mr">Mr</option>
          <option value="Miss">Miss</option>
          <option value="Mrs">Mrs</option>
          <option value="Master">Master</option>
          <option value="Over Lord">Over Lord</option>
        </select>

      </div>

    <br>
    <br>
    <br>

    <div class="container">
      <div class ="col-sm-9">
      <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
    </div>
    </div>

    </form>
    <br>
    <br>
    </form>

